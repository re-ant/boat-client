{
  "parserOptions": {
    "project": ["tsconfig.json"]
  },
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": ["airbnb", "airbnb/hooks", "next/core-web-vitals", "prettier"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/jsx-props-no-spreading": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".tsx", ".ts"] }],
    "import/extensions": [
      // 확장자 생략 import 예외처리
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  }
}
