{
  "parserOptions": {
    "project": ["tsconfig.json"]
  },
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": ["airbnb", "airbnb/hooks", "next/core-web-vitals", "prettier"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/jsx-props-no-spreading": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".tsx", ".ts"] }]
  }
}
